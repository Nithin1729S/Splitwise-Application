<!-- reminders.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reminders</title>
    <style>
        /* Add your CSS styling here */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .reminder {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
            display: flex;
            align-items: center;
        }
        .reminder img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .reminder .details {
            flex: 1;
        }
        .reminder h3 {
            margin: 0;
        }
        .reminder p {
            margin: 5px 0;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Reminders</h2>
        <% if (results.length > 0) { %>
            <% results.forEach(function(result) { %>
                <div class="reminder">
                    <img src="<%= result.profile_pic %>" alt="Profile Picture">
                    <div class="details">
                        <p>Reminder: You owe â‚¹<%= result.amount %> to <%= result.Name %>.</p>
                    </div>
                </div>
            <% }); %>
            <form action="markread" method="post">
                <button type="submit">Mark As Read</button>
            </form>
        <% } else { %>
            <p>No reminders found.</p>
        <% } %>
    </div>
</body>
</html>
