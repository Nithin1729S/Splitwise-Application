<!DOCTYPE html>
<html>
    <head>
        <title><%= group.groupname %></title>
    </head>
    <body>
        <h1><%= group.groupname %></h1>
        <img src="<%= group.group_pic %>">
        <div>Admin Name:<%= user.Name %></div>
        <div>Admin EmailId:<%= user.Email %></div>  
        <form action="/add_expense" method="post">
            <input type="hidden" name="groupid" value="<%= group.groupid %>">
            <button type="submit">Create New Expense</button>
        </form>
        <form action="/logout" method="post">
            <button type="submit">Logout</button>
        </form>
        <div>Group Members</div>
        <% if(members.length==0){ %>
            <div>No Members Currently</div>
        <% } %>
        <% for(c of members){ %>
            <div>Name:<%= c.Name %></div>
            <div>Email:<%= c.Email %></div>
            <% if(isadmin==1){ %>
                <button type="button">Remove User</button>
            <% } %>
        <% } %>

        <!-- Add Member form -->
    <% if(isadmin==1){ %>
        <% if(users.length>0){ %>
    <form action="/add_member" method="post" id="addMemberForm">
        <button type="button" id="showDropdownBtn">Invite Member</button>
        <div id="dropdownContainer" style="display: none;">
            <label for="userId">Select Member:</label>
            <select id="userId" name="userId">
                <% users.forEach(users => { %>
                    <option value="<%= users.userId %>"><%= users.Name %></option>
                <% }); %>
            </select>
            <input type="hidden" name="groupid" value="<%= group.groupid %>">
            <button type="submit">Add</button>
        </div>
    </form>
        <% } %>
        <% if(friends.length>0){ %>
    <form action="/add_friend" method="post" id="addMemberForm">
        <button type="button" id="showDropdownBtn2">Add Friend</button>
        <div id="dropdownContainer2" style="display: none;">
            <label for="Friendid">Select Friend:</label>
            <select id="Friendid" name="Friendid">
                <% friends.forEach(friend => { %>
                    <option value="<%= friend.userId %>"><%= friend.Name %></option>
                <% }); %>
            </select>
            <input type="hidden" name="groupid" value="<%= group.groupid %>">
            <button type="submit">Add</button>
        </div>
    </form>
        <% } %>
    <% } %>

    <script>
        // JavaScript to toggle visibility of dropdown when Add Member button is clicked
        document.getElementById('showDropdownBtn').addEventListener('click', function() {
            document.getElementById('dropdownContainer').style.display = 'block';
        });
        document.getElementById('showDropdownBtn2').addEventListener('click', function() {
            document.getElementById('dropdownContainer2').style.display = 'block';
        });
    </script>
    </body>
</html>
